
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<CustomerTypes>



<div style="padding:80px">
    <div class="border whitebackgroundBorder" style="padding:100px;width:800px;height:auto">
        <div class="row">
            <div class="col-6 text-info"><h4><strong>Customer Type</strong></h4></div>
            <div class="col-6 text-end"><partial name="_CreateButtonPartial" /></div>
        </div>
        <br>
        @if (Model.Count() > 0)
        {
            <table id="tblrecords" class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(item => item.CustomerType)</th>
                        <th colspan="2"></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td class="text-bg-dark">@item.CustomerType</td>
                            <td><partial name="_EditAndViewPartialView" model="@item.Id" /></td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <h3>There is no Customer Type Present in the data base....</h3>
        }
    </div>
</div>


<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-light justify-content-center">
                <h5 class="modal-title">Customer Type Details</h5>
            </div>
            <div class="modal-body justify-content-center" id="MyModalContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" style="width:20%" name="btnClose" data-dismiss="modal" data-bs-dismiss="#MyModal">Close</button>
            </div>
        </div>
    </div>
</div>

@*model for deleting the button*@
<div class="modal fade" id="MyDeleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-light justify-content-center">
                <h5 class="modal-title">Delete Confirmation</h5>
            </div>
            <div class="modal-body justify-content-center" id="MyDeleteModalContent">
                <i class="fa-solid fa-circle-exclamation" style="width: 150px; height: 150px; color: #d70404; padding: 0px 0px 0px 153px;"></i>              
            </div>
            @*<div class="modal-footer row justify-content-between">*@
            <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-secondary" style="width:20%;" name="btnClose" data-dismiss="modal" data-bs-dismiss="#MyModal">Close</button>
            <button type="button" class="btn btn-success" id="ConfirmBtn" style="width:20%">Confirm</button>
        </div>
        </div>
    </div>
</div>

    @section scripts{
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script>
            $(function () {
                var positionbackURL = '/CustomerType/CustomerType/GetcustomertypeDetails';

                // Event handler for the Details button click
                $('#btnViewDetails').on('click', function () {
                    var id = $(this).data('id');

                    $('button[name="btnClose"]').on('click', function () {
                        $('#MyModal').modal('hide');
                    });
                    $.ajax({
                        type: "GET",
                        url: positionbackURL,
                        contentType: "application/json; charset=utf-8",
                        data: { id: id },
                        cache: false,
                        dataType: 'html',
                        success: function (data) {
                            $('#MyModalContent').html(data);
                            $('#MyModal').modal('show');
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });



            $(function () {
                var positionbackURL = '/CustomerType/CustomerType/DeleteCustomerType';
                $('#btnDelete').on('click', function () {
                    var id = $(this).data('id');
                    $('#MyDeleteModal').modal('show');
                });
                $('button[name="btnClose"]').on('click', function () {
                    $('#MyDeleteModal').modal('hide');
                });

                // Attach click event to the ConfirmBtn outside the click event for anchorDetail
                $('#ConfirmBtn').on('click', function () {
                    $('#MyDeleteModal').modal('hide');
                    var id = $('#btnDelete').data('id');
                    $.ajax({
                        type: "POST",
                        url: positionbackURL,
                        data: { id: id },
                        success: function () {
                            alert("Deleted Successfully.");
                            window.location.href = '/CustomerType/CustomerType/Index';
                            // Optionally, you can add code here to update the UI after successful deletion
                            // For example, remove the deleted item from the list or refresh the list.
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });           



            $(function () {


                // Event handler for the Details button click

            });

        </script>
    }
